---
import BaseHead from "../components/BaseHead.astro";
import ContentBox from "../components/ContentBox.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";
import heart from "../images/heart4.gif";
import headShot from "../images/MDLsmall.jpeg";
import "../styles/global.css";

export interface Props {
  title?: string;
  heroVisible?: boolean;
  pageName?: string;
}

const {
  title = "MATTHEW DANGER LIPPMAN: CULT ICON. AMERICAN HERO.",
  heroVisible = true,
  pageName = "Official Website of Matthew Danger Lippman",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <BaseHead />
  </head>
  <body>
    <div class="main-wrapper">
      <Header />
      <Nav />
      <ContentBox>
        {
          heroVisible && (
            <>
              <article class="hero">
                <h2 id="official"> {pageName} </h2>
                <div class="hero-images-wrapper">
                  <img src={heart} alt="GIF of a red heart spinning" />
                  <img src={headShot} alt="MDL Headshot" />
                  <img src={heart} alt="GIF of a red heart spinning" />
                </div>
              </article>
              <p> {title} </p>
            </>
          )
        }

        <slot />
      </ContentBox>
      <Footer />
    </div>
  </body><style>
    body {
      background-image: url(../images/smokeybackground.jpg);
      overflow-x: hidden;
      text-align: center;
      padding-inline: var(--padding-sml);
    }

    .main-wrapper {
      width: clamp(20rem, 99%, 95rem);
      margin-inline: auto;
    }

    .hero-images-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: var(--padding-sml);
      column-gap: 0.125em;
      margin: 0.5em;
    }

    h2,
    .hero p {
      font-family: var(--header-font);
      line-height: 1.5;
    }

    h2::before,
    h2::after,
    p::before,
    p::after {
      content: "~";
      display: inline-block;
    }

    Footer {
      position: absolute;
      bottom: 0;
    }
  </style>
</html>
